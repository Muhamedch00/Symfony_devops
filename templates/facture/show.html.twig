{% extends 'base.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <h1>Facture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>InvoiceNumber</th>
                <td>{{ facture.invoiceNumber }}</td>
            </tr>
            <tr>
                <th>BillingDate</th>
                <td>{{ facture.billingDate|date('d/m/Y')}}</td>
            <tr>
                <th>Amount</th>
                <td>{{ facture.amount }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ facture.status }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ facture.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_facture_index') }}">back to list</a>

    <a href="{{ path('app_facture_edit', {'id': facture.id}) }}">edit</a>

    {{ include('facture/_delete_form.html.twig') }}
