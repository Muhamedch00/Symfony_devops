{% extends 'base.html.twig' %}

{% block title %}Gestion des Factures{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Invoice index page specific styles */
        .page-header {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            color: white;
            padding: 2rem;
            border-radius: 10px;
            margin-bottom: 2rem;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.15);
        }

        .page-header h1 {
            margin: 0;
            font-weight: 600;
            font-size: 1.8rem;
            display: flex;
            align-items: center;
        }

        .page-header h1 i {
            margin-right: 12px;
            color: #a5b4fc;
        }

        .table-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            font-size: 0.95rem;
        }

        .table th {
            background: linear-gradient(to right, #4f46e5, #7c3aed);
            color: white;
            padding: 14px 20px;
            text-align: left;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table th:first-child {
            border-top-left-radius: 10px;
        }

        .table th:last-child {
            border-top-right-radius: 10px;
        }

        .table td {
            padding: 16px 20px;
            border-bottom: 1px solid #e5e7eb;
            color: #374151;
        }

        .table tr:last-child td {
            border-bottom: none;
        }

        .table tr:hover td {
            background-color: #f5f3ff;
        }

        .status {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            display: inline-block;
        }

        .status-paid {
            background-color: #dcfce7;
            color: #166534;
        }

        .status-pending {
            background-color: #fef3c7;
            color: #92400e;
        }

        .status-overdue {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .empty-state {
            padding: 2.5rem;
            text-align: center;
            color: #6b7280;
            font-style: italic;
        }

        .btn-new {
            background: linear-gradient(to right, #4f46e5, #7c3aed);
            color: white;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-new:hover {
            background: linear-gradient(to right, #6366f1, #8b5cf6);
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

        .btn-new i {
            margin-right: 8px;
            font-size: 0.9rem;
        }

        .btn-action {
            padding: 6px 12px;
            border-radius: 6px;
            display: inline-flex;
            align-items: center;
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.2s ease;
            text-decoration: none;
            margin-right: 5px;
        }

        .btn-view {
            background-color: #e0e7ff;
            color: #4338ca;
            border: 1px solid #c7d2fe;
        }

        .btn-view:hover {
            background-color: #c7d2fe;
            color: #3730a3;
        }

        .btn-edit {
            background-color: #fff7ed;
            color: #9a3412;
            border: 1px solid #ffedd5;
        }

        .btn-edit:hover {
            background-color: #ffedd5;
            color: #7c2d12;
        }

        .btn-action i {
            margin-right: 6px;
            font-size: 0.85rem;
        }

        /* Amount formatting */
        .amount {
            font-weight: 600;
            color: #1f2937;
        }
        .amount::after {
            content: " €";
        }

        /* Animations */
        .fade-in-up {
            animation: fadeInUp 0.5s ease forwards;
            opacity: 0;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .table tbody tr {
            animation-fill-mode: both;
            animation-duration: 0.5s;
            animation-name: fadeInUp;
            animation-timing-function: cubic-bezier(0.4, 0.0, 0.2, 1);
        }

        /* Responsive adjustments */
        @media (max-width: 992px) {
            .btn-action-text {
                display: none;
            }

            .btn-action i {
                margin-right: 0;
            }

            .btn-action {
                padding: 8px;
            }
        }

        @media (max-width: 768px) {
            .page-header {
                padding: 1.5rem;
            }

            .table-container {
                border-radius: 8px;
                overflow-x: auto;
            }

            .table th, .table td {
                padding: 12px 15px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container mt-4 fade-in-up">
        <div class="page-header d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-file-invoice"></i> Liste des Factures</h1>
            <a href="{{ path('app_facture_new') }}" class="btn-new">
                <i class="fas fa-plus"></i> Nouvelle Facture
            </a>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                <tr>
                    <th>N° Facture</th>
                    <th>Date</th>
                    <th>Montant</th>
                    <th>Statut</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for facture in factures %}
                    <tr style="animation-delay: {{ loop.index0 * 0.05 }}s">
                        <td>{{ facture.invoiceNumber }}</td>
                        <td>{{ facture.billingDate|date('d/m/Y') }}</td>
                        <td class="amount">{{ facture.amount }}</td>
                        <td>
                            <span class="status status-{{ facture.status|lower }}">
                                {{ facture.status }}
                            </span>
                        </td>
                        <td>{{ facture.note|slice(0, 30) }}{% if facture.note|length > 30 %}...{% endif %}</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_facture_show', {'id': facture.id}) }}"
                                   class="btn-action btn-view"
                                   title="Voir détails">
                                    <i class="fas fa-eye"></i>
                                    <span class="btn-action-text">Voir</span>
                                </a>
                                <a href="{{ path('app_facture_edit', {'id': facture.id}) }}"
                                   class="btn-action btn-edit"
                                   title="Modifier">
                                    <i class="fas fa-edit"></i>
                                    <span class="btn-action-text">Modifier</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="empty-state">
                            <i class="fas fa-info-circle me-2"></i>
                            Aucune facture enregistrée pour le moment
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://kit.fontawesome.com/c26cd2166c.js" crossorigin="anonymous"></script>
    <script>
        // Initialize tooltips if Bootstrap 5 is available
        if (typeof bootstrap !== 'undefined') {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        }

        // Format currency with JavaScript as fallback
        document.querySelectorAll('.amount').forEach(element => {
            const amount = parseFloat(element.textContent);
            if (!isNaN(amount)) {
                element.textContent = amount.toLocaleString('fr-FR', {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: 2
                });
            }
        });
    </script>
{% endblock %}