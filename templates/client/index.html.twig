{% extends 'base.html.twig' %}
{% block title %}Gestion des Clients{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Client list page specific styles */
        .page-header {
            background: linear-gradient(135deg, var(--primary-700) 0%, var(--primary-800) 100%);
            color: white;
            padding: 2rem;
            border-radius: 10px;
            margin-bottom: 2rem;
            box-shadow: 0 4px 12px rgba(3, 105, 161, 0.15);
        }

        .page-header h1 {
            margin: 0;
            font-weight: 600;
            font-size: 1.8rem;
            display: flex;
            align-items: center;
        }

        .page-header h1 i {
            margin-right: 12px;
            color: var(--primary-300);
        }

        .table-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        .table th {
            background: linear-gradient(to right, var(--primary-800), var(--primary-700));
            color: white;
            padding: 14px 20px;
            text-align: left;
            font-weight: 500;
            font-size: 0.95rem;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }

        .table th:first-child {
            border-top-left-radius: 10px;
        }

        .table th:last-child {
            border-top-right-radius: 10px;
        }

        .table td {
            padding: 16px 20px;
            border-bottom: 1px solid var(--gray-200);
            color: var(--gray-700);
            font-size: 0.95rem;
        }

        .table tr:last-child td {
            border-bottom: none;
        }

        .table tr:hover td {
            background-color: var(--primary-50);
        }

        .empty-state {
            padding: 2.5rem;
            text-align: center;
            color: var(--gray-500);
            font-style: italic;
        }

        .btn-new {
            background: linear-gradient(to right, var(--primary-600), var(--primary-700));
            color: white;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-new:hover {
            background: linear-gradient(to right, var(--primary-700), var(--primary-800));
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

        .btn-new i {
            margin-right: 8px;
            font-size: 0.9rem;
        }

        .btn-action {
            padding: 6px 12px;
            border-radius: 6px;
            display: inline-flex;
            align-items: center;
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.2s ease;
            text-decoration: none;
        }

        .btn-view {
            background-color: var(--primary-50);
            color: var(--primary-700);
            border: 1px solid var(--primary-200);
        }

        .btn-view:hover {
            background-color: var(--primary-100);
            color: var(--primary-800);
        }

        .btn-edit {
            background-color: #fff7ed;
            color: #c2410c;
            border: 1px solid #ffedd5;
            margin-left: 5px;
        }

        .btn-edit:hover {
            background-color: #ffedd5;
            color: #9a3412;
        }

        .btn-action i {
            margin-right: 6px;
            font-size: 0.85rem;
        }

        /* Animations */
        .fade-in-up {
            animation: fadeInUp 0.5s ease forwards;
            opacity: 0;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .table tbody tr {
            animation-fill-mode: both;
            animation-duration: 0.5s;
            animation-name: fadeInUp;
            animation-timing-function: cubic-bezier(0.4, 0.0, 0.2, 1);
        }

        /* Responsive adjustments */
        @media (max-width: 992px) {
            .btn-action-text {
                display: none;
            }

            .btn-action i {
                margin-right: 0;
            }

            .btn-action {
                padding: 8px;
            }
        }

        @media (max-width: 768px) {
            .page-header {
                padding: 1.5rem;
            }

            .table-container {
                border-radius: 8px;
                overflow-x: auto;
            }

            .table th, .table td {
                padding: 12px 15px;
            }
        }
    </style>
{% endblock %}


    {% block body %}
        {{ parent() }}
    <div class="container mt-4 fade-in-up">
        <div class="page-header d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-users"></i> Liste des Clients</h1>
            <a href="{{ path('app_client_new') }}" class="btn-new">
                <i class="fas fa-plus"></i>Nouveau Client
            </a>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Responsable</th>
                    <th>Entreprise</th>
                    <th>Téléphone</th>
                    <th>Adresse</th>
                    <th>Pays</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr style="animation-delay: {{ loop.index0 * 0.05 }}s">
                        <td>{{ client.id }}</td>
                        <td>{{ client.managerName }}</td>
                        <td>{{ client.companyName }}</td>
                        <td>{{ client.phoneNumber }}</td>
                        <td>{{ client.address }}</td>
                        <td>{{ client.country }}</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_client_show', {'id': client.id}) }}"
                                   class="btn-action btn-view"
                                   title="Voir détails">
                                    <i class="fas fa-eye"></i>
                                    <span class="btn-action-text">Voir</span>
                                </a>
                                <a href="{{ path('app_client_edit', {'id': client.id}) }}"
                                   class="btn-action btn-edit"
                                   title="Modifier">
                                    <i class="fas fa-edit"></i>
                                    <span class="btn-action-text">Modifier</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="empty-state">
                            <i class="fas fa-info-circle me-2"></i>
                            Aucun client enregistré pour le moment
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://kit.fontawesome.com/c26cd2166c.js" crossorigin="anonymous"></script>
    <script>
        // Initialize tooltips if Bootstrap 5 is available
        if (typeof bootstrap !== 'undefined') {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        }
    </script>
{% endblock %}